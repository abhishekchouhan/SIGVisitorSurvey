<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sacred_logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:scaleType="centerInside"
            android:src="@drawable/sacredindiagalleryimage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="0dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Visitor Survey"
            android:textSize="25sp"
            android:password="false"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Thank you for visiting our gallery. We are constantly seeking to improve the gallery experience. Your feedback is valuable. Please kindly complete the following Visitor Survey. \n\n * - Indicates required field "
            android:textSize="18sp"
            android:id="@+id/textView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="0dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="First Name * : "
                android:textSize="@dimen/title_text_size" />

            <EditText
                android:id="@+id/edittext_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="left"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textSize="@dimen/title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="Last Name * : "
                android:textSize="@dimen/title_text_size" />

            <EditText
                android:id="@+id/edittext_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="left"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textSize="@dimen/title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="Email Address : "
                android:textSize="@dimen/title_text_size" />

            <EditText
                android:id="@+id/edittext_emailaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="left"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textSize="@dimen/title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="Contact Number : "
                android:textSize="@dimen/title_text_size" />

            <EditText
                android:id="@+id/edittext_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="left"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="Date of Visit * : "
                android:textSize="@dimen/title_text_size" />

            <EditText
                android:id="@+id/edittext_datevisit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.4"
                android:enabled="false"
                android:focusable="false"
                android:gravity="left"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/title_text_size" />

            <ImageButton
                android:id="@+id/button_dateselect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="left"
                android:src="@android:drawable/ic_menu_my_calendar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="Is this your first visit ? "
                android:textSize="@dimen/title_text_size" />

            <Switch
                android:id="@+id/switch_firstvisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textOff="No"
                android:textOn="Yes"
                android:gravity="left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="Would you like to receive the emails for future events ? "
                android:textSize="@dimen/title_text_size" />

            <Switch
                android:id="@+id/switch_receiveemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:textOff="No"
                android:textOn="Yes" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="How did you hear about us ? *"
                android:textSize="@dimen/title_text_size" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText_hearaboutus"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="What struck you the most ? *"
                android:textSize="@dimen/title_text_size" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText_struckMost"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="How can we improve ?"
                android:textSize="@dimen/title_text_size" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText_improve"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Save"
                android:textSize="@dimen/title_text_size" />

            <Button
                android:id="@+id/button_discard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Discard"
                android:textSize="@dimen/title_text_size" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>